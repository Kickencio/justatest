<!-- CONTENIDO PRINCIPAL -->
<div class="container mt-5 text-center">
  <h2 class="mb-5 tabla-delete">¿Estás seguro de eliminar estos clientes?</h2>
  <div class="tabla-contenedor">
    <table class="custom-table mt-3 mx-auto">
      <thead>
        <tr>
          <th>Código</th>
          <th>Alias</th>
          <th>Nombre</th>
          <th>Habilidad</th>
          <th>Descripción</th>
          <th>Plataforma</th>
        </tr>
      </thead>
      <tbody>
        <% clientes.forEach(cliente => { %>
          <tr>
            <td><%= cliente.COD_CLIENTE %></td>
            <td><%= cliente.CLIENTE_ALIAS %></td>
            <td><%= cliente.NOMBRES %></td>
            <td><%= cliente.SKILL %></td>
            <td><%= cliente.SKILL_DES %></td>
            <td><%= cliente.PLATAFORMA %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <form action="/delete-multiple" method="POST" class="mt-4" >
    <% clientes.forEach(cliente => { %>
      <input type="hidden" name="clientesSeleccionados" value="<%= cliente.COD_CLIENTE %>">
    <% }) %>
    <button type="submit" class="btn btn-icon btn-danger2" id="a21">
      <i class='bx bxs-trash'></i>Eliminar</button>
    <a href="/" class="btn btn-icon btn-cancel" id="a21"><i class='bx bx-arrow-back'></i>Cancelar</a>
  </form>
</div>
<!-- CONTENIDO PRINCIPAL -->

